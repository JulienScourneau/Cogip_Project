{% block header %}
  <header class="header">
    <div class="header__navBar">
      <p class="header__navBar__logo">
        cogip
      </p>
      <nav class="header__navBar__nav">
        <a class="header__navBar__nav__link" href="/">Home</a>
        <a class="header__navBar__nav__link" href="/invoices">Invoices</a>
        <a class="header__navBar__nav__link" href="/companies">Companies</a>
        <a class="header__navBar__nav__link" href="/contacts">Contact</a>
      </nav>
      <div class="header__navBar__button">
        <button class="header__navBar__button__signUp" id="signUp">Sign up</button>
        <button class="header__navBar__button__login" id="login">Login</button>
      </div>
    </div>
{# Login #}
    <span class="loginbackground"></span>
    <div class="login">
      <h4 class="login__title">Login</h4>
      <form class="login__form" action="assets/php/login.php" method="post">
        <input class="login__form__input"
        id="loginUsername"
        type="text"
        name="login"
        placeholder="Username" />
        <input class="login__form__input"
        id="LoginPassword"
        type="password"
        name="pwd"
        placeholder="Password"  />
      <input class="login__form__button" type="submit" value="Connexion" />
      {# <a class="login__form__link" href="/dashboard">Login</a> #}
    </form>
    </div>
    {# Sign up #}
    <span class="signUpbackground"></span>
    <div class="signUp">
      <h4 class="signUp__title">Sign up</h4>
      <form class="signUp__form" action="" method="">
      <input class="signUp__form__input"
        id="signUpUsername"
        type="text"
        name="signUpUsername"
        placeholder="Username" />
      <input class="signUp__form__input"
        id="signUpPassword"
        type="password"
        name="signUpPassword"
        placeholder="Password"  />
      <input class="signUp__form__button" type="submit" value="Sign up" />
    </form>
    </div>
{# Menu Phone #}
    <ul class="menu showMenu">
      <li><a class="menuItem" href="/">Home</a></li>
      <li><a class="menuItem" href="/invoices">Invoices</a></li>
      <li><a class="menuItem" href="/companies">Companies</a></li>
      <li><a class="menuItem" href="/contacts">Contact</a></li>
      <button class="menuSignUp" id="signUp">Sign up</button>
      <button class="menuLogin" id="login">
        <a href="/dashboard">Login</a>
      </button>
    </ul>
    <button class="hamburger">
        <img class="menuIcon material-icons"
          src="assets/img/icons/menu.svg"
          alt=""
          width="50px" />
      <img class="closeIcon material-icons"
          src="assets/img/icons/close.svg"
          alt=""
          width="50px" />
    </button>
    {% block horizon %}

    {% endblock %}
    <img id="break" src="assets/img/Rectangle 10.png" alt="" />
  </header>
{% endblock %}
